<%= form_for(@event, :html => {:multipart => true}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :occurs_at %><br />
    <%= f.date_select :occurs_at  %>
  </div>
  <div class="field">
    <%= f.label :picture, 'Picture or logo' %><br />
    <%= f.file_field :picture %>
    <%= f.hidden_field :picture_cache %>
  </div>
  <div class="field">
    <%= f.label :url, 'Website' %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :starts_votes_at %><br />
    <%= f.date_select :starts_votes_at %>
  </div>
  <div class="field">
    <%= f.label :end_votes_at %><br />
    <%= f.date_select :end_votes_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
