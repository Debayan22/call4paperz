<div id="events_list">
  <% if @events.empty? -%>
    <p>There are no events yet. <%= link_to "Be the first to create one!", new_event_path %></p>
    <br/>
  <% else -%>
    <%= link_to image_tag('/images/create_transp.png'), new_event_path, :class => 'create_button' %>
    <div style="clear:both"></div>
    <% @events.each do |event| %>
      <div class="event_listed">
        <%= image_tag event.picture.small.url, :class => 'logo_small' %>
        <div class="event_desc">
          <h1><%= link_to event.name, event %></h1>
          <p>
            <%= truncate(event.description, :length => 100) %>
          </p>
        </div>
        <div class="event_status">
          <span><%= event.proposals.size %></span> proposal(s)
          <span><%= event.votes.size %></span> vote(s)
          <span><%= event.comments.size %></span> comment(s)
        </div>
      </div>
    <% end %>
    <%= link_to image_tag('/images/create_transp.png'), new_event_path, :class => 'create_button' %>
  <% end -%>
</div>

