<div id="left_bar">
	<%= render :partial => 'events/event' %>
</div>

<div id="proposal_list">
	<%= image_tag '/images/prop_vote.png' %>
	<p class="sub_vote">Decide who speaks at the conference!</p>
	<br/>

	<% if @event.proposals.blank? %>
	  <spam class="yet">This event is ready to receive proposals!<br/><br/>
	  Tweet this event to your friends so they can submit proposals and spread the word!</spam>
	<br/><br/>
	<%= render 'shared/tweet_button', :text => "This event is on a call for papers run! Check it out. #call4paperz", :url => event_url(@event) %>
	<% end %>


	<% @event.proposals.each do |proposal| %>
		<%= render proposal %>
	<%end  %>
</div>

