<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Occurs at:</b>
  <%= @event.occurs_at %>
</p>

<% if @event.picture.present? -%>
  <p>
    <b>Picture:</b>
    <%= image_tag @event.picture.big.url %>
  </p>
<% end -%>

<p>
  <b>Url:</b>
  <%= @event.url %>
</p>

<p>
  <b>Twitter:</b>
  <%= @event.twitter %>
</p>

<p>
  <b>User:</b>
  <%= @event.user %>
</p>

<p>
  <b>Starts votes at:</b>
  <%= @event.starts_votes_at %>
</p>

<p>
  <b>End votes at:</b>
  <%= @event.end_votes_at %>
</p>


<%= link_to "New proposal", new_event_proposal_path(@event) %>

<hr />
<% @event.proposals.each do |proposal| %>
	<%= render proposal %>
<%end  %>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
