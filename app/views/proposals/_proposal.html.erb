<div class="prop">
  <div class="spinner">
    <%= image_tag 'ajax-loader.gif' %>
  </div>

  <p><strong><%= link_to proposal.name, event_proposal_path(@event, proposal), :class => "prop_link" %></strong></p>
  <%= render_percentage_bar(proposal.acceptance_percentage) %>
  <p><%= proposal.description %></p>

  <div class="prop_sub">
    <%= user_picture(proposal.user) %>
    <small><%= proposal.user.name %></small>
  </div>

  <%= link_to "#{proposal.comments.size} comments", [@event, proposal], :class => 'com_prop' %>

  <span class="voting_container">
    <%= vote_box(@event, proposal, current_user) %>
  </span>
</div>
